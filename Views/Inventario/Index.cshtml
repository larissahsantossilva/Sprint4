@model List<Inventario>

@{
    ViewData["Title"] = "Inventário";
}

<h1> Inventários </h1>


<!-- LINK PARA A TELA DE CADASTRO DE UM NOVO INVENTARIO -->
<a asp-action="cadastrar">Novo Inventário</a>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th></th>
    </tr>
    <!-- PARA CADA ITEM ENCONTRADO NA LISTA DE PRODUTOS -->
    @foreach (var item in Model)
    {
<tr>
    <td>@item.InventarioId</td>
    <td>@item.Nome</td>
    <td>@item.Descricao</td>
    <td>

    <a asp-action="Adicionar" asp-route-id="@item.InventarioId">Adicionar Produtos</a>
    <!-- LINK PARA A EDIÇÃO DE UM PRODUTO-->
    <a asp-action="editar" asp-route-id="@item.InventarioId" class="btn btn-primary btn-sm">Editar</a>
    <!-- BOTÃO DE REMOVER -->
    <button onclick="idCliente.value = @item.InventarioId" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal">
        Remover
    </button>
    </td>
</tr>}
</table>

<!-- MODAL PARA A REMOÇÃO DE UM PRODUTO -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja realmente excluir o inventário?
            </div>
            <div class="modal-footer">
                <form asp-action="remover">
                    <input type="hidden" name="id" id="idCliente" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>
